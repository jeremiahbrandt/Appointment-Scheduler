<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".ProSettingsPage">

    <EditText
        android:id="@+id/pro_update_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="First Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pro_update_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100px"
        android:contentDescription="Last Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pro_update_profession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="Profession"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/pro_update_streetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="Street Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pro_update_streetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="Street Number"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pro_update_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="City"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/pro_update_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="State"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pro_update_zipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100px"
        android:contentDescription="Zip Code"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pro_update_button"
        android:text="@string/save_button"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/pro_update_back_button"
        android:text="@string/back_button"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>